{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "./dist",
    "lib": ["es6", "dom", "es2017"],
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "target": "es6",
    "types": [
      "node"
    ],
    "strictNullChecks": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ],
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "../transaction-manager"
    }
  ]
}